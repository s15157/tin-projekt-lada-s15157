<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CARent</title>
    <link rel="stylesheet" href="/css/style.css" />
        
</head>

<body>
    <header>
        <h1><img src="/images/logo.png" alt="CARent logo" class="logo"></h1>
        <nav>
            <ul>
                <li><a href="/" class="<%= navLocation == 'main' ? 'active' : ''%>">Strona główna</a></li>
                <% if(loggedUser) { %>
                <li><a href="/customer" class="<%= navLocation == 'customer' ? 'active' : ''%>">Klienci</a></li>
                <% } %>
                <li><a href="/car" class="<%= navLocation == 'car' ? 'active' : ''%>">Samochody</a></li>
                <% if(loggedUser) { %>
                <li><a href="/rent" class="<%= navLocation == 'rent' ? 'active' : ''%>">Wypożyczenia</a></li>
                <% } %>
                <% if(loggedUser && loggedUser.type == 'admin') { %>
                <li><a href="/register/users" class="<%= navLocation == 'user' ? 'active' : ''%>">Użytkownicy</a></li>
                <% } %>
            </ul>
        </nav>
    </header>
    <% if(!loggedUser) { %>
            <div id="login">
                <div id="head-login">
                    <h5>Logowanie</h5>
                </div>
            <form method="post" action="/login" id="form-login" novalidate >
                
                <input type="email" id="loginEmail" name="email" placeholder="Email">

                <input type="password" id="loginPassword" name="password" placeholder="Hasło">

                <input type="submit" value="Zaloguj się">
                <span id="loginErrors"><%= loginError ? loginError : ''%></span>
            </form>
            </div>
            <div id="register">
                <div id="head-register">
                    <h5>Nie masz konta?</h5>
                </div>
                <button onclick="window.location.href='/register'">Zarejestruj się!</button>
            </div>
    <% } else { %>
        <div id="login-logged">
            <span>Jesteś zalogowany jako: <%=loggedUser.firstName + " " + loggedUser.lastName%></span>
            <!-- <a href="/logout">Wyloguj się</a> -->
            <button onclick="window.location.href='/logout'">Wyloguj</button>
        </div>
    <% } %>